<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/android_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/android_course"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="20dp"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/android_course"
        app:layout_constraintBottom_toBottomOf="@id/android_course"
        app:layout_constraintEnd_toEndOf="@id/android_course"
        android:padding="20dp"
        android:src="@drawable/search"
        android:tint="@color/white"/>

    <TextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/android_course"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/middle_grey"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/photo"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:padding="50dp"/>

    <TextView
        android:id="@+id/certificated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/android_course"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/certificated"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="130dp"
        android:layout_marginStart="60dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/under_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photo"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_grey"
        android:paddingTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_photo"
        app:layout_constraintEnd_toEndOf="@id/under_photo"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/health"/>

    <ImageView
        android:id="@+id/turned_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_photo"
        app:layout_constraintEnd_toEndOf="@id/under_photo"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/turned_in"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_photo"
        app:layout_constraintEnd_toEndOf="@id/under_photo"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/share"/>

    <TextView
        android:id="@+id/separate_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/under_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="330dp"/>

    <ImageView
        android:id="@+id/left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/separate_line"
        app:layout_constraintTop_toBottomOf="@id/under_photo"
        android:background="@color/middle_grey"
        android:paddingStart="140dp"
        android:paddingEnd="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="350dp"/>

    <ImageView
        android:id="@+id/right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/separate_line"
        app:layout_constraintTop_toBottomOf="@id/under_photo"
        android:background="@color/middle_grey"
        android:paddingStart="140dp"
        android:paddingEnd="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="350dp"/>

    <TextView
        android:id="@+id/layouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/left_part"
        app:layout_constraintStart_toStartOf="@id/left_part"
        android:text="@string/layouts"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/right_part"
        app:layout_constraintStart_toStartOf="@id/right_part"
        android:text="@string/views"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/under_left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/left_part"
        app:layout_constraintStart_toStartOf="@id/left_part"
        app:layout_constraintEnd_toEndOf="@id/left_part"
        android:background="@color/light_grey"
        android:paddingTop="50dp"
        android:paddingStart="140dp"
        android:paddingEnd="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/under_right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/right_part"
        app:layout_constraintStart_toStartOf="@id/right_part"
        app:layout_constraintEnd_toEndOf="@id/right_part"
        android:background="@color/light_grey"
        android:paddingTop="50dp"
        android:paddingStart="140dp"
        android:paddingEnd="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/health_left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_left_part"
        app:layout_constraintEnd_toEndOf="@id/under_left_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/health"/>

    <ImageView
        android:id="@+id/turned_in_left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_left_part"
        app:layout_constraintEnd_toEndOf="@id/under_left_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/turned_in"/>

    <ImageView
        android:id="@+id/share_left_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_left_part"
        app:layout_constraintEnd_toEndOf="@id/under_left_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/share"/>

    <ImageView
        android:id="@+id/health_right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_right_part"
        app:layout_constraintEnd_toEndOf="@id/under_right_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/health"/>

    <ImageView
        android:id="@+id/turned_in_right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_right_part"
        app:layout_constraintEnd_toEndOf="@id/under_right_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/turned_in"/>

    <ImageView
        android:id="@+id/share_right_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/under_right_part"
        app:layout_constraintEnd_toEndOf="@id/under_right_part"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/share"/>

</androidx.constraintlayout.widget.ConstraintLayout>