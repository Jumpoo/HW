<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue"/>

    <ImageView
        android:id="@+id/back_arrow"
        android:src="@drawable/back"
        android:contentDescription="@string/back"
        android:tint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        android:layout_marginStart="35dp"/>

    <TextView
        android:id="@+id/edit_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="@string/edit_contact"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/name_heading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/name"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/phone_number"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        android:hint="@string/type_new_name"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"/>

    <TextView
        android:id="@+id/phone_heading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/phone_number"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"/>

    <EditText
        android:id="@+id/phone_number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:hint="@string/type_new_phone_number"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"/>

    <TextView
        android:id="@+id/email_heading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/email"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"/>

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        app:layout_constraintBottom_toTopOf="@id/button_update"
        android:hint="@string/type_new_email"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"/>

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintBottom_toTopOf="@id/button_remove"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="@string/update"
        android:textSize="15sp"
        android:background="@drawable/update_background"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"/>

    <Button
        android:id="@+id/button_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="@string/remove"
        android:textSize="15sp"
        android:background="@drawable/remove_background"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>