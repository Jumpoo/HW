<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout">

    <ImageView
        android:id="@+id/viewItemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/viewItemLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewItemIcon"
        android:layout_marginStart="10dp"
        android:text="@string/line_1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/viewItemLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewItemLine1"
        app:layout_constraintStart_toEndOf="@id/viewItemIcon"
        android:layout_marginStart="10dp"
        android:text="@string/line_2"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

