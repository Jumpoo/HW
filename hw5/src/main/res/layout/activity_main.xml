<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="65dp"
        android:background="@color/blue"/>

    <EditText
        android:id="@+id/viewSearch"
        android:inputType="text"
        android:hint="@string/search_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewToolbar"
        app:layout_constraintStart_toStartOf="@id/viewToolbar"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingStart="50dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/viewSearchIcon"
        android:contentDescription="@string/search_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/viewSearch"
        app:layout_constraintStart_toStartOf="@id/viewToolbar"
        android:src="@drawable/search_icon"
        app:tint="@color/black"
        android:layout_marginTop="9dp"
        android:layout_marginStart="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"/>

   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/viewAddContactButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:src="@drawable/add"
       android:clickable="true"
       android:focusable="true"
       android:tint="@color/white"
       android:layout_marginBottom="40dp"
       android:layout_marginEnd="50dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/viewAddPhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/viewAddContactButton"
        app:layout_constraintEnd_toEndOf="@+id/viewAddContactButton"
        android:src="@drawable/phone_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/viewAddEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/viewAddPhoneButton"
        app:layout_constraintEnd_toEndOf="@+id/viewAddPhoneButton"
        android:src="@drawable/email_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>